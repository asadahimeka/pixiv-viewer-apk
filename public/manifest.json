{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "Pixiv Viewer",
  "short_name": "Pixiv Viewer",
  "description": "又一个 Pixiv 阅览工具",
  "theme_color": "#FFFFFF",
  "background_color": "#F6F8FB",
  "display": "standalone",
  "start_url": ".",
  "icons": [
    {
      "src": "./img/icons/192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "./img/icons/256.png",
      "sizes": "256x256",
      "type": "image/png"
    },
    {
      "src": "./img/icons/512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "shortcuts": [
    {
      "name": "搜索",
      "url": "/search",
      "icons": [
        {
          "src": "./img/icons/search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "排行",
      "url": "/rank/daily",
      "icons": [
        {
          "src": "./img/icons/rank.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "设置",
      "url": "/setting",
      "icons": [
        {
          "src": "./img/icons/setting.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ]
}
