{
  "appId": "org.eu.cocomi.pxvek",
  "appName": "Pixiv Viewer",
  "webDir": "dist",
  "android": {
    "appendUserAgent": "PixivViewer/1.6",
    "buildOptions": {
      "releaseType": "APK"
    }
  },
  "ios": {
    "appendUserAgent": "PixivViewer/1.6 iPxve/1.6"
  },
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 0
    },
    "CapacitorHttp": {
      "enabled": true
    },
    "CapacitorCookies": {
      "enabled": false
    }
  }
}
