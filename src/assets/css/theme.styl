tab-text-color($color)
  .com_sel_tab.cur,
  #app .nav a.cur,
  .user-container .user-tabs .van-tag--mark,
  .search .search-bar-wrap .search-bar-word .word,
  .Following .van-tab--active .van-tab__text
    color $color !important

.custom_theme
  tab-text-color(#fefefe)
  .search .search-bar-wrap .search-bar-word .word .text
    border-color #fefefe !important

bandori-chara-icon($url)
  .setting .app-title
    img
      display none
    &-desc
      position relative
      padding-left 1.2rem
      &::before
        content ''
        position absolute
        top 50%
        left 0
        width: 0.9rem
        height: 0.9rem
        transform translateY(-50%)
  .setting:has(.user_data)
    .app-title-desc
      padding-left 0
      &::before
        display none
  .Home .home-title
    &::before
      content ''
      position absolute
      top 50%
      left 0
      width: 0.8rem
      height: 0.8rem
      transform translateY(-50%)
    .app-logo
      display none
    .app-title
      position relative
      padding-left 0.9rem
  .setting .app-title-desc::before,
  .Home .home-title::before
    background url($url) no-repeat center / contain

artwork-tag-shadow($alpha = 0.05, $isBold = false)
  #app .artwork-meta .tag-list .tag
    if $isBold
      font-weight bold
    text-shadow 1PX 1PX rgba(0,0,0,$alpha)

